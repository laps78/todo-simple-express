<form action="create/" method="POST" class="mt-5" enctype="multipart/form-data">
  <div class="form-group">
    <label for="inputTitle">Заголовок</label>
    <input
      type="text"
      value="<%= todo.title%>"
      name="title"
      class="form-control"
      id="inputTitle"
    />
  </div>

  <div class="form-group">
    <label for="inputDesc">Описание</label>
    <textarea rows="3" name="description" class="form-control" id="inputDesc">
      <%= todo.description %>
    </textarea>
  </div>

  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>
