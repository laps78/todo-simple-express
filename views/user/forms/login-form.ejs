<form action="/api/user/login" method="POST" class="mt-5" style="margin: 1rem">
  <div class="form-group">
    <label for="inputName">Логин</label>
    <input
      type="text"
      placeholder="Имя пользователя"
      name="username"
      class="form-control"
      id="inputName"
      pattern="[A-Za-zА-Яа-я0-9]{5,16}"
      title="Допустимое значение: длина 8-15 символов латиницы заглавных или прописных, разрешены цифры."
      required
    />
  </div>

  <div class="form-group">
    <label for="inputPass">Пароль</label>
    <input
      type="password"
      placeholder="Пароль"
      name="password"
      class="form-control"
      id="inputPass"
      pattern="[A-Za-z0-9@$]{8, 16}"
      title="Допустимо от 8 до 16 симаолов латиницы, нижние подчеркивания и тире, символы @, $."
      required
    />
  </div>

  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Войти</button>
  </div>
</form>
