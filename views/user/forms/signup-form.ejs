<form
  action="/api/user/signup"
  method="POST"
  class="mt-5"
  style="
    input:invalid {
      border: red solid 1px;
    }
    input:valid {
      border: green solid 1px;
    }
  "
>
  <div class="form-group">
    <label for="inputNickName">Отображаемое имя</label>
    <input
      type="text"
      placeholder="Отображаемое имя"
      name="nickname"
      class="form-control"
      id="inputNickName"
      pattern="/[A-Z][a-z][А-Я][а-я][0-9]{8,16}$/"
      required
    />
    <p>
      <small
        >длина 8-15 символов латиницы заглавных или прописных, разрешены цифры,
        без пробелов</small
      >
    </p>
  </div>

  <div class="form-group">
    <label for="inputUserName">Логин</label>
    <input
      type="text"
      placeholder="Имя пользователя"
      name="username"
      class="form-control"
      id="inputUserName"
      pattern="/[A-Z][a-z][А-Я][а-я][0-9]{8,16}$/"
      required
    />
    <p>
      <small
        >длина 8-15 символов латиницы заглавных или прописных, разрешены цифры,
        без пробелов</small
      >
    </p>
  </div>

  <div class="form-group">
    <label for="inputPass">Пароль</label>
    <input
      type="password"
      placeholder="Пароль"
      name="password"
      class="form-control"
      id="inputPass"
      pattern="/[A-Z][a-z][А-Я][а-я][0-9]{8,16}$/"
      required
    />
    <p>
      <small
        >длина 8-15 символов латиницы заглавных или прописных, разрешены цифры,
        без пробелов</small
      >
    </p>
  </div>

  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Войти</button>
  </div>
</form>
